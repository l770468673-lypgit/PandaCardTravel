<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapters.fragments.MainFrag_mine">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/FAF6F4F4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fragment_mine_bluecolor"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/mine_title_jianbian"
                android:orientation="horizontal">

                <com.pandacard.teavel.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/icn_avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/mine_rely_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="8dp"
                            android:text="@string/app_name"
                            android:textColor="@color/ffffff85"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/mine_rely_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/mine_rely_name1"
                            android:text="@string/app_name"
                            android:textColor="@color/ffffff85"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/mine_rely_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="40dp"
                            android:background="@mipmap/arrow" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/mine_rely_card1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="8dp"
                            android:text="@string/fragment_mine_my_cardsnum"
                            android:textColor="@color/ffffff85"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/mine_rely_card2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/mine_rely_card1"
                            android:text="102450036400511"
                            android:textColor="@color/ffffff85"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/mine_rely_panda1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/mine_user_boxframe"
                            android:padding="6dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="2dp"
                            android:text="@string/fragment_mine_twxt_edit"
                            android:textColor="@color/ffffff85"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mine_rely_panda2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/mine_rely_panda1"
                            android:background="@drawable/mine_user_boxframe"
                            android:padding="6dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="2dp"
                            android:text="@string/fragment_mine_my_cards"
                            android:textColor="@color/ffffff85"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/mine_rely_panda3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="40dp"
                            android:background="@mipmap/arrow" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mine_boxframe"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/fragment_mine_bluecolor"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/fragment_mine_boxframe"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/fragment_mine_minewallet"
                    android:textColor="@color/ffffff"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/fragment_mine_minerecord"
                        android:textColor="@color/ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/fragment_mine_minesummoney"
                        android:textColor="@color/ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/fragment_mine_payset"
                        android:textColor="@color/ffffff"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>


            <RadioGroup
                android:id="@+id/fragment_mine_rgroup"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/fragment_mine_boxframe"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/fragment_mine_active"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/mine_addcard"
                    android:gravity="center"
                    android:text="@string/fragment_mine_active"
                    android:textColor="@color/a515C6F" />

                <RadioButton
                    android:id="@+id/fragment_mine_useread"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/mine_cardlost"
                    android:gravity="center"
                    android:text="@string/fragment_mine_useread"
                    android:textColor="@color/a515C6F" />


                <RadioButton
                    android:id="@+id/fragment_mine_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/mine_myordeer"
                    android:gravity="center"
                    android:text="@string/fragment_mine_order"
                    android:textColor="@color/a515C6F" />

                <RadioButton
                    android:id="@+id/fragment_mine_eid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/mine_myeid"
                    android:gravity="center"
                    android:text="@string/fragment_mine_eid"
                    android:textColor="@color/a515C6F" />
            </RadioGroup>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fragment_mine_rgroup"
                android:layout_margin="20dp"
                android:background="@drawable/fragment_mine_boxframe_relay"
                android:orientation="vertical"
                android:padding="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rely_img1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right"
                        android:background="@mipmap/nfc_suggest" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/rely_img1"
                        android:gravity="center"
                        android:text="@string/fragment_mine_reqinvoice"
                        android:textColor="@color/a515C6F" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:background="@mipmap/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:textColor="@color/a515C6F">

                    <ImageView
                        android:id="@+id/rely_img2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right"
                        android:background="@mipmap/mine_online_kefu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/rely_img2"
                        android:gravity="center"
                        android:text="@string/fragment_mine_onlineser"
                        android:textColor="@color/a515C6F" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:background="@mipmap/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rely_img3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right"
                        android:background="@mipmap/nfc_rate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/rely_img3"
                        android:gravity="center"
                        android:text="@string/fragment_mine_address"
                        android:textColor="@color/a515C6F" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:background="@mipmap/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rely_img4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"

                        android:layout_gravity="right"
                        android:background="@mipmap/mine_setting_pass" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/rely_img4"
                        android:gravity="center"
                        android:text="@string/fragment_mine_changepass"
                        android:textColor="@color/a515C6F" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:background="@mipmap/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rely_img5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right"
                        android:background="@mipmap/mine_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/rely_img5"
                        android:gravity="center"
                        android:text="@string/fragment_mine_twxt_about"
                        android:textColor="@color/a515C6F" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:background="@mipmap/arrow" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>