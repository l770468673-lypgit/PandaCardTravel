<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dip"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/iv_bg_jieshuo_window">
        
	    <ImageView
	        android:layout_margin="10dip"
	        android:scaleType="fitXY"
	        android:id="@+id/iv_jieshuo_window_pic"
	        android:layout_width="match_parent"
	        android:layout_height="100dip" />

	    <TextView
	        android:textSize="16sp"
			android:maxEms="5"
			android:singleLine="true"
	        android:layout_marginLeft="10dip"
	        android:textColor="#aa111111"
	        android:id="@+id/tv_jieshuo_window_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
    
    
	    <TextView
	        android:maxLines="2"
	        android:maxEms="9"
	        android:textSize="12sp"
	        android:ellipsize="end"
	        android:layout_margin="10dip"
	        android:textColor="#aa555555"
	        android:id="@+id/tv_jieshuo_window_memo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>

	    <LinearLayout
	        android:id="@+id/ly_jieshuo_windown_play"
	        android:gravity="center"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:background="@drawable/rectangle1_jieshuo_play"
	        android:paddingTop="3dip"
	        android:paddingBottom="3dip"
	        android:layout_marginBottom="30dip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        
		    <ImageView
		        android:id="@+id/iv_jieshuo_windown_play"
		        widget:srcCompat="@drawable/iv_jieshuo_windown_stop"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
	        
	        
		    <TextView
		        android:id="@+id/tv_jieshuo_windown_play"
		        android:layout_marginLeft="20dip"
		        android:textSize="18sp"
		        android:text="暂停"
		        android:textColor="#ffffff"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
	        

	        
	    </LinearLayout>
    
	
</LinearLayout>