<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:visibility="visible" >

    <com.xlu.widgets.ProgressWheel
        android:id="@+id/load_fail_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        wheel:matProg_barColor="@color/green"
        wheel:matProg_progressIndeterminate="true" />

    <ImageView
        android:id="@+id/load_fail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/iv_load_fail" />

    <TextView
        android:id="@+id/load_fail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/load_fail_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="网络连接失败"
        android:textSize="14sp" />

    <Button
        android:id="@+id/load_fail_reload"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/load_fail_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_corners"
        android:text="重新加载"
        android:textColor="@color/green"
        android:textSize="18sp" />

</RelativeLayout>