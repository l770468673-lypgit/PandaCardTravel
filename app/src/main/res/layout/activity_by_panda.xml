<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uis.ByPandaActivity">

    <RelativeLayout
        android:id="@+id/rely_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/lly_attbar"
            layout="@layout/toptitlebar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/lly_vvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lly_attbar"
            android:orientation="vertical"
            android:padding="14dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/fragment_home_vvp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:background="@color/alert_text_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/bypanda_pandatrevcard"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="￥ 0.01"
                    android:textColor="@color/B23008" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/bypanda_pandatrevtext" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lly_02"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rely_1"
        android:background="@color/calendar_color_black2"
        android:orientation="vertical" />


    <LinearLayout
        android:id="@+id/lly_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lly_02"
        android:layout_margin="4dp"
        android:background="@drawable/recyaleview_item"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/bypanda_productmsg"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="    出行交通全国通用，让出行更省心出行交通全国通用，

            让出行更省心出行交通全国通用，让出行更省心出行交通全国通用，让出行更省心出行交通全国通用，让出行更省心出行交通全国通用，
            出行交通全国通用，让出行更省心出行交通全国通用，让出行更省心

            让出行更省心出行交通全国通用，让出行更省心" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lly_03"
        android:layout_marginTop="30dp"
        android:background="@drawable/recyaleview_item"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/bypanda_whatspanda"
            android:textColor="@color/green"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/calendar_color_black2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="6.5"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/bypanda_agreeandread" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bypanda_byread"
                    android:textColor="@color/google_blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bycard_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/nextsetup"
                    android:gravity="center"
                    android:text="@string/bypanda_busuccess"
                    android:textColor="@color/ffffff" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>